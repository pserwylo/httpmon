<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:shrinkColumns="1" android:stretchColumns="1"
	android:layout_height="wrap_content" android:layout_width="fill_parent">
	<TableRow>
		<ImageView android:id="@+id/status_img" android:src="@drawable/stopped"
			android:paddingTop="2px"
			android:paddingLeft="2px"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_gravity="left|center_vertical" />
		<TextView android:id="@+id/name_text" android:text="Some really, very long name"
			android:paddingLeft="2px" android:textSize="24px"
			android:layout_height="wrap_content" android:gravity="left"
			android:layout_gravity="left|center_vertical" android:layout_width="fill_parent"
			android:ellipsize="end" />
		<LinearLayout android:orientation="vertical"
			android:paddingLeft="5px" android:layout_height="wrap_content"
			android:layout_gravity="right|center_vertical" android:gravity="right"
			android:layout_width="fill_parent">
			<TextView android:id="@+id/request_text"
				android:text="http://yahoo.com/foo/bar/baz/buz/wiggle/woggle"
				android:textSize="8px" android:layout_height="wrap_content"
				android:ellipsize="end" android:layout_width="fill_parent"
				android:layout_gravity="right|center_vertical" android:gravity="right|center_vertical"
				android:typeface="monospace" />
			<TextView android:id="@+id/last_text" android:text="Updated ~5 minutes ago"
				android:textSize="10px" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:layout_gravity="right|center_vertical"
				android:gravity="right|center_vertical" />
		</LinearLayout>
	</TableRow>
</TableLayout>